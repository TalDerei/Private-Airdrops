{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "utils"],
  "exclude": ["node_modules"]
}
